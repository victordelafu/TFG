---
const { nombre, tipo, precio, patron } = Astro.props;
---

<div class="bg-white rounded-xl shadow p-4 flex flex-col justify-between">
  <h2 class="text-xl font-semibold">{nombre}</h2>
  <p class="text-gray-600">{tipo}</p>
  <p class="text-sm text-gray-500">Patrón: {patron}</p>
  <p class="text-indigo-600 font-bold mt-2">€{precio}/día</p>
  <button class="mt-4 bg-indigo-500 text-white px-3 py-2 rounded hover:bg-indigo-600">Ver más</button>
</div>
