---
import ChatWidget from '../components/ChatWidget.astro';
---
<layout:BaseLayout>
  <section class="p-6 bg-gray-100 min-h-screen">
    <h1 class="text-2xl font-bold mb-4">Añadir tu barco</h1>
    <form class="bg-white p-6 rounded-xl shadow-md max-w-md space-y-4">
      <input type="text" placeholder="Nombre del barco" class="w-full border px-4 py-2 rounded" required />
      <input type="text" placeholder="Tipo de barco" class="w-full border px-4 py-2 rounded" required />
      <input type="number" placeholder="Precio por día (€)" class="w-full border px-4 py-2 rounded" required />
      <textarea placeholder="Descripción" class="w-full border px-4 py-2 rounded" required></textarea>
      <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Publicar</button>
    </form>

    <ChatWidget />
  </section>
</layout:BaseLayout>
