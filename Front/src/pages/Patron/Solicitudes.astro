---
import PatronLayout from '../../layouts/PatronLayout.astro';
---

<PatronLayout>
  <section class="max-w-5xl mx-auto px-6 py-12 pt-[6.5rem]">
    <h1 class="text-3xl font-bold mb-6 text-center">Solicitudes de reserva</h1>
    <div id="solicitudes"></div>
  </section>

  <script type="module">
    document.addEventListener("DOMContentLoaded", () => {
      const usuario = JSON.parse(localStorage.getItem("usuario"));
      const tours = JSON.parse(localStorage.getItem("tours") || "[]");
      const reservas = JSON.parse(localStorage.getItem("reservas") || "[]");
      const usuarios = JSON.parse(localStorage.getItem("usuarios") || "[]");

      const misTours = tours.filter(t => t.publicadoPor === usuario?.id);
      const solicitudes = reservas.filter(r => misTours.find(t => t.id === r.idTour));

      const contenedor = document.getElementById("solicitudes");

      if (solicitudes.length === 0) {
        contenedor.innerHTML = "<p class='text-center text-gray-600'>No tienes solicitudes por revisar.</p>";
        return;
      }

      contenedor.innerHTML = solicitudes.map(r => {
        const tour = tours.find(t => t.id === r.idTour);
        const solicitante = usuarios.find(u => u.id === r.solicitante);
        const nombreSolicitante = solicitante?.nombre || "Desconocido";

        return `
          <div class="bg-white rounded-xl shadow p-6 mb-6 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800 mb-2">${tour?.nombre || "Tour desconocido"}</h2>
            <p class="text-gray-700"><strong>Solicitante:</strong> ${nombreSolicitante}</p>
            <p class="text-gray-700"><strong>Personas:</strong> ${r.personas}</p>
            <p class="text-gray-700 mb-2"><strong>Estado:</strong> 
              <span class="${r.estado === 'aceptada' ? 'text-green-600' : r.estado === 'rechazada' ? 'text-red-600' : 'text-yellow-600'} font-medium">
                ${r.estado}
              </span>
            </p>
            ${r.estado === "pendiente" ? `
              <div class="flex gap-4 mt-3">
                <button class="aceptar px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition" data-id="${r.id}">Aceptar</button>
                <button class="rechazar px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" data-id="${r.id}">Rechazar</button>
              </div>` : ""}
          </div>
        `;
      }).join("");

      document.querySelectorAll(".aceptar").forEach(btn => {
        btn.addEventListener("click", () => {
          actualizarEstado(btn.dataset.id, "aceptada");
        });
      });

      document.querySelectorAll(".rechazar").forEach(btn => {
        btn.addEventListener("click", () => {
          actualizarEstado(btn.dataset.id, "rechazada");
        });
      });

      function actualizarEstado(id, nuevoEstado) {
        const reservas = JSON.parse(localStorage.getItem("reservas") || "[]");
        const index = reservas.findIndex(r => r.id === id);
        if (index !== -1) {
          reservas[index].estado = nuevoEstado;
          localStorage.setItem("reservas", JSON.stringify(reservas));
          location.reload();
        }
      }
    });
  </script>
</PatronLayout>
