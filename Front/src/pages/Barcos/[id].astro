---
import Layout from '../../layouts/ClienteLayout.astro';

const barcos = [
  {
    id: '1',
    nombre: 'Velero Aurora',
    imagenes: ['/images/aurora.jpg', '/images/aurora2.jpg'],
    descripcion: 'Un hermoso velero ideal para viajes costeros tranquilos.',
    precio: 250,
    extras: ['GPS', 'Nevera', 'Ducha']
  },
  {
    id: '2',
    nombre: 'Yate Coral',
    imagenes: ['/images/coral.jpg'],
    descripcion: 'Yate de lujo para experiencias inolvidables en alta mar.',
    precio: 400,
    extras: ['Jacuzzi', 'Wi-Fi', 'Capitán incluido']
  },
  {
    id: '3',
    nombre: 'Lancha Sol',
    imagenes: ['/images/sol.jpg'],
    descripcion: 'Perfecta para paseos cortos o pesca recreativa.',
    precio: 180,
    extras: ['Equipo de pesca', 'Toldo', 'Hielera']
  }
];

const { id } = Astro.params;
const barco = barcos.find(b => b.id === id);
---

<Layout>
  {barco ? (
    <section class="max-w-5xl mx-auto px-6 py-10">
      <h1 class="text-3xl font-bold mb-4">{barco.nombre}</h1>

      <div class="grid md:grid-cols-2 gap-6">
        
        <div class="space-y-4">
          {barco.imagenes.map(src => (
            <img src={src} alt={barco.nombre} class="rounded-xl shadow-md" />
          ))}
        </div>


        <div>
          <p class="mb-4 text-lg">{barco.descripcion}</p>
          <p class="text-2xl text-primary font-bold mb-4">€{barco.precio}/día</p>

          <h3 class="font-semibold text-lg mb-2">Extras incluidos:</h3>
          <ul class="list-disc list-inside text-gray-700 mb-6">
            {barco.extras.map(extra => <li>{extra}</li>)}
          </ul>

          <button class="bg-primary text-white px-6 py-2 rounded hover:bg-blue-800 transition">
            Reservar
          </button>
        </div>
      </div>
    </section>
  ) : (
    <section class="text-center py-20">
      <h2 class="text-2xl font-bold text-red-600">Barco no encontrado</h2>
      <a href="/boats" class="text-primary hover:underline">← Volver al listado</a>
    </section>
  )}
</Layout>
