---
import Layout from '../../layouts/ClienteLayout.astro';
---

<Layout>
  <section class="max-w-4xl mx-auto px-6 py-10">
    <div id="detalle-barco" class="bg-white p-6 rounded-xl shadow"></div>
  </section>

  <script type="module">
    document.addEventListener("DOMContentLoaded", () => {
      const id = new URLSearchParams(window.location.search).get("id");
      const barcos = JSON.parse(localStorage.getItem("barcos") || "[]");
      const barco = barcos.find(b => b.id === id);
      const contenedor = document.getElementById("detalle-barco");

      if (!barco) {
        contenedor.innerHTML = `
          <p class="text-red-600 text-lg">Barco no encontrado.</p>
          <a href="/Cliente/Index" class="text-blue-600 hover:underline">← Volver</a>
        `;
        return;
      }

      contenedor.innerHTML = `
        <img src="${barco.imagen}" alt="${barco.nombre}" class="w-full h-64 object-cover rounded-xl mb-4">
        <h1 class="text-3xl font-bold mb-2">${barco.nombre}</h1>
        <p class="text-gray-700 mb-4">${barco.descripcion}</p>
        <p class="text-xl font-semibold text-indigo-600 mb-6">€${barco.precio}/día</p>
        <a href="/Cliente/Index" class="text-blue-600 hover:underline">← Volver a barcos</a>
      `;
    });
  </script>
</Layout>
