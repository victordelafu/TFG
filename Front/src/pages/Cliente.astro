    <h1 class="text-2xl font-bold mb-6">Explora barcos</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <BarcoCard nombre="Velero Sunrise" tipo="Velero" precio="150" patron="Juan"/>
      <BarcoCard nombre="Lancha Turbo" tipo="Lancha" precio="100" patron="Ana"/>
      <!-- Aquí se mostrarían dinámicamente desde el backend -->
    </div>

    <ChatWidget />
